FROM php:7.1.3-fpm-alpine

MAINTAINER Mihail Krastev <mlinuxgada@gmail.com>


RUN apk update \
	&& apk add libxml2-dev bzip2 \ 
	&& docker-php-ext-install bcmath bz2 exif mysqli opcache pdo pdo_mysql soap \
	#&& pecl install redis-3.1.0 \
    #&& pecl install xdebug-2.5.0 \
    && docker-php-ext-enable bcmath bz2 exif mysqli opcache pdo pdo_mysql soap

# Copy xdebug configration for remote debugging
COPY ./xdebug.ini /usr/local/etc/php/conf.d/xdebug.ini


# Copy opcache configration
COPY ./opcache.ini /usr/local/etc/php/conf.d/opcache.ini

ADD ./php.ini /usr/local/etc/php/conf.d
ADD ./fpm.pool.conf /usr/local/etc/php-fpm.d/

WORKDIR /var/www

CMD ["php-fpm"]

EXPOSE 9000
